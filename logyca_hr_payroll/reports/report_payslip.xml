<odoo>
    <data>
        <record id="hr_payroll.report_payslip" model="ir.ui.view">
            <field name="name">report_payslip</field>
            <field name="priority">16</field>
            <field name="arch" type="xml">
                <t t-name="hr_payroll.report_payslip">
                    <head>
                        <style>
                            .clearfix:after {
                            content: "";
                            display: table;
                            clear: both;
                            }
                            .table-wrapper {
                            width: 50%;
                            float: left;
                            }
                        </style>
                    </head>
                    <t t-set="o"
                        t-value="o.with_context(lang=o.employee_id.work_contact_id.lang or o.env.lang)" />
                    <div class="page" style="font-style: normal; font-size: 12px; float: left ; ">
                        <div class="row" style="text-align: center;">
                            <div class="col-3">
                                <!-- <img t-if="o.company_id.logo"
                                t-att-src="image_data_uri(o.company_id.logo)" style="max-height:
                                90px; float: center;  " alt="Logo"/> -->
                            </div>
                            <div class="col-6">
                                <h6>
                                    <b>DESPRENDIBLE DE NÓMINA PRUEBAAAS</b>
                                </h6>
                            </div>
                        </div>
                        <div style="background-color: #f8f9fa; padding: 10px; border-radius: 10px;">
                            <table name="employee-infos" class="table table-sm">
                                <tr style="border:none;">
                                    <td
                                        style="border:none; font-weight:bold; text-align:center; width:30%;">
                                        <table style="border:none; width:100%;">
                                            <tr>
                                                <span t-field="o.company_id.name" />
                                            </tr>
                                            <br />
                                            <tr> NIT: <span t-field="o.company_id.vat" />
                                            </tr>
                                            <br />
                                            <tr>
                                                <span t-field="o.company_id.street" />
                                            </tr>
                                        </table>
                                    </td>
                                    <td style="border:none; width:40%;">
                                        <table style="border:none; width:100%;">
                                            <tr>
                                                <td style="border:none;">
                                                    <b>Nombre:</b>
                                                </td>
                                                <td style="border:none;">
                                                    <span t-field="o.employee_id.name" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="border:none;">
                                                    <b>Cédula:</b>
                                                </td>
                                                <td style="border:none;">
                                                    <span t-field="o.employee_id.identification_id" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="border:none;">
                                                    <b>Tipo de contrato:</b>
                                                </td>
                                                <td style="border:none;">
                                                    <span t-esc="o.contract_id.get_contract_type()" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="border:none;">
                                                    <b>Fecha Ingreso:</b>
                                                </td>
                                                <td style="border:none;">
                                                    <span t-field="o.contract_id.date_start" />
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                    <td style="border:none; width:30%;">
                                        <table style="border:none; width:100%;">
                                            <tr>
                                                <td style="border:none;">
                                                    <b>Cuenta:</b>
                                                </td>
                                                <td style="border:none;">
                                                    <span
                                                        t-esc="o.employee_id.work_contact_id.bank_ids.filtered(lambda bank: bank.is_main == True and bank.company_id == o.employee_id.company_id).acc_number" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="border:none;">
                                                    <b>Fecha Inicial:</b>
                                                </td>
                                                <td style="border:none;">
                                                    <span t-field="o.date_from" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="border:none;">
                                                    <b>Fecha final:</b>
                                                </td>
                                                <td style="border:none;">
                                                    <span t-field="o.date_to" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="border:none;">
                                                    <b>Salario básico:</b>
                                                </td>
                                                <td style="border:none;">
                                                    <span t-field="o.contract_id.wage"
                                                        t-options="{'widget': 'monetary', 'display_currency': o.company_id.currency_id}" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="border:none;">
                                                    <b>Sucursal:</b>
                                                </td>
                                                <td style="border:none;">
                                                    <span t-field="o.employee_id.branch_id" />
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <h6 style="text-align:center;">
                            <b>RESUMEN DEL PAGO</b>
                        </h6>
                        <table class="table table-sm table-bordered"
                            style="border-radius: 5px; -webkit-border-radius: 5px; line-height: 120%">
                            <thead>
                                <tr class="font-weight-bold bg-light"
                                    style="border-radius: 5px; -webkit-border-radius: 5px;">
                                    <th>CONCEPTO</th>
                                    <th>CANT.</th>
                                    <th>TOTAL</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="sorted_lines"
                                    t-value="sorted(o.line_ids, key=lambda l: l.salary_rule_id.sequence)" />
                                <t t-set="current_category" t-value="''" />
                                <t t-set="total_quantity" t-value="0" />
                                <t t-set="total_value" t-value="0" />
                                <t t-set="grand_total_quantity" t-value="0" />
                                <t t-set="grand_total_value" t-value="0" />
                                <t t-foreach="sorted_lines" t-as="line">
                                    <span
                                        t-if="not line.category_id.name in ['Neto','Bruto'] and line.salary_rule_id.appears_on_payslip">
                                        <t t-if="line.category_id.name != current_category">
                                            <t
                                                t-if="current_category and current_category not in ['Neto', 'Bruto']">
                                                <tr
                                                    t-attf-class="{{ 'font-weight-bold bg-light' if current_category.upper().startswith('TOTAL') else '' }}">
                                                    <td style="width: 20%">
                                                        <span t-esc="current_category" />
                                                    </td>
                                                    <td style="width: 7%">
                                                        <span t-esc="total_quantity" />
                                                    </td>
                                                    <td style="width: 14%">
                                                        <span t-esc="total_value"
                                                            t-options="{'widget': 'monetary', 'precision': 0, 'display_currency': o.company_id.currency_id}" />
                                                    </td>
                                                </tr>
                                            </t>
                                            <t t-set="grand_total_quantity"
                                                t-value="grand_total_quantity + (total_quantity if total_value &gt;= 0 else -total_quantity)" />
                                            <t t-set="grand_total_value"
                                                t-value="grand_total_value + (total_value if total_value &gt;= 0 else -total_value)" />
                                            <t t-set="current_category"
                                                t-value="line.category_id.name" />
                                            <t t-set="total_quantity" t-value="0" />
                                            <t t-set="total_value" t-value="0" />
                                        </t>
                                        <t t-set="total_quantity"
                                            t-value="total_quantity + line.quantity" />
                                        <t t-set="total_value" t-value="total_value + line.total" />
                                    </span>
                                </t>
                            </tbody>
                            <tfoot class="font-weight-bold bg-light">
                                <tr>
                                    <td>
                                        <b>TOTAL A PAGAR</b>
                                    </td>
                                    <td />
                                    <td>
                                        <b>
                                            <span t-field="o.net_wage"
                                                t-options="{'widget': 'monetary', 'precision': 0, 'display_currency': o.company_id.currency_id}" />
                                        </b>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                        <h6 style="text-align:center;">
                            <b>DETALLE NÓMINA</b>
                        </h6>
                        <t t-set="groups"
                            t-value="{                 'Devengos y Sueldo': ('DEV_SALARIAL', 'BASIC','COMISIONES','INDEM'),                 'Deducciones y Retenciones': ('DEDUCCIONES', 'EM','SSOCIAL'),                 'Horas extras y recargos': ('HEYREC',),                 'Devengos No Salariales': ('DEV_NO_SALARIAL','AUX'),                 'Licencias e Incapacidades': ('LICENCIA_MATERNIDAD', 'LICENCIA_NO_REMUNERADA', 'AUS','ACCIDENTE_TRABAJO','LICENCIA_REMUNERADA', 'INCAPACIDAD'),                 'Prestaciones' : ('PRESTACIONES_SOCIALES')             }" />
                        <div class="table-container" style="border-radius: 5px;">
                            <t t-foreach="groups.items()" t-as="group">
                                <t t-set="group_name" t-value="group[0]" />
                                <t t-set="group_categories" t-value="group[1]" />
                                <t t-set="group_lines"
                                    t-value="o.line_ids.filtered(lambda l: l.category_id.code in group_categories  and l.salary_rule_id.appears_on_payslip)" />
                                <t t-if="group_lines">
                                    <div class="table-wrapper">
                                        <h6 style="text-align:center;">
                                            <b t-esc="group_name" />
                                        </h6>
                                        <table class="table table-sm table-bordered"
                                            style="border-radius: 5px; line-height: 110%">
                                            <thead class="font-weight-bold bg-light">
                                                <tr class="font-weight-bold bg-light">
                                                    <th>CONCEPTO</th>
                                                    <th>CANT.</th>
                                                    <th>TOTAL</th>
                                                </tr>
                                            </thead>
                                            <tbody style="border-radius: 5px;">
                                                <tr t-foreach="group_lines" t-as="line">
                                                    <td style="width: 20%">
                                                        <span t-field="line.name" />
                                                    </td>
                                                    <td style="width: 7%">
                                                        <t
                                                            t-if="line.salary_rule_id.display_days_worked == True">
                                                            <span
                                                                t-esc="sum([i.number_of_days for i in o.worked_days_line_ids.filtered(lambda x: x.code == 'WORK100')])" />
                                                        </t>
                                                        <t t-else="">
                                                            <span t-field="line.quantity" />
                                                        </t>
                                                    </td>
                                                    <td style="width: 14%">
                                                        <span t-esc="line.total"
                                                            t-options="{'widget': 'monetary', 'precision': 0, 'display_currency': o.company_id.currency_id}" />
                                                    </td>
                                                </tr>
                                            </tbody>
                                            <tfoot>
                                                <tr class="font-weight-bold bg-light">
                                                    <td>
                                                        <b>Total</b>
                                                    </td>
                                                    <td />
                                                    <td>
                                                        <b>
                                                            <span
                                                                t-esc="sum(line.total for line in group_lines)"
                                                                t-options="{'widget': 'monetary', 'precision': 0, 'display_currency': o.company_id.currency_id}" />
                                                        </b>
                                                    </td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </t>
                            </t>
                        </div>
                        <table class="table">
                            <tr style="border:none;">
                                <td style="width: 70%;border:none;">
                                    <!-- <p align="justify">
                                        <span t-if="cp_template.caption" t-esc="cp_template.caption"/>
                                    </p> -->
                                </td>
                                <td style="width: 30%;border:none;">
                                    <table class="table table-condensed">
                                        <tr class="border-black">
                                            <td>
                                                <strong>NETO A PAGAR</strong>
                                            </td>
                                            <td class="text-right">
                                                <span
                                                    t-field="o.line_ids.filtered(lambda line: line.code == 'NET').total"
                                                    t-options="{'widget': 'monetary', 'precision': 0, 'display_currency': o.company_id.currency_id}" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="text-justify" colspan="2">
                                                <span
                                                    t-esc="o.contract_id.get_amount_text(o.line_ids.filtered(lambda line: line.code == 'NET').total).lower().capitalize()" />
                                                pesos </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                        <t t-if="o.not_line_ids">
                            <p>Por favor tener en cuenta las siguientes deducciones no aplicadas en
                                esta liquidación:
                            </p>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>CONCEPTO</th>
                                        <th>ENTIDAD</th>
                                        <th>VALOR</th>
                                    </tr>
                                </thead>
                                <tbody style="font-weight: normal;">
                                    <tr t-foreach="o.not_line_ids" t-as="not_line">
                                        <td>
                                            <span t-field="not_line.name" />
                                        </td>
                                        <t t-if="not_line.entity_id.business_name">
                                            <td>
                                                <span t-field="not_line.entity_id.business_name" />
                                            </td>
                                        </t>
                                        <t t-if="not not_line.entity_id.business_name">
                                            <td>
                                                <span t-field="not_line.entity_id.name" />
                                            </td>
                                        </t>
                                        <td>
                                            <span t-field="not_line.total" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </t>
                    </div>
                </t>
            </field>
        </record>
        <template id="lavish_hr_payroll.report_views_compute">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.basic_layout">
                        <div class="page">
                            <tr class="text-right" t-foreach="o.line_ids.filtered(lambda x: x.name)"
                                t-as="line_ids">
                                <h5
                                    style="border-bottom:1px solid black;font-weight: bold;font-size:16px; "
                                    t-esc="(line_ids.salary_rule_id.name).upper()" />
                                <small t-if="line_ids.code == 'IBD'"
                                    style="font-style: italic;font-family: Montserrat;font-weight: bold;">Valor
                                    de ingresos que sirven para el pago de prestaciones sociales. Tiene
                                    en cuenta el tope del 40% de los ingresos no salariales que al
                                    sobrepasarlos harian parte de los ingresos base. <br />Para el
                                    cálculo del IBC Seguridad Social no se tiene en cuenta el subsidio
                                    de transporte</small>
                            </tr>
                        </div>
                    </t>
                </t>
        </template>
        <record id="report_views_computes" model="ir.actions.report">
            <field name="name">Payslip</field>
            <field name="model">hr.payslip</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">lavish_hr_payroll.report_views_compute</field>
            <field name="report_file">lavish_hr_payroll.report_views_compute</field>
            <field name="print_report_name">'Payslip - %s' % (object.name)</field>
            <field name="binding_model_id" ref="model_hr_payslip"/>
            <field name="binding_type">report</field>
            <!-- Erase fields to avoid double PDF posting -->
            <field name="attachment"></field>
            <field name="attachment_use" eval="False"/>
        </record>
    </data>
</odoo>