                            <b>
                                <span t-esc="o.line_ids.filtered(lambda line: line.code == 'NET').total +  o.line_ids.filtered(lambda line: line.code == 'NETO').total" t-options="{'widget': 'monetary', 'precision': 0, 'display_currency': o.company_id.currency_id}"/>
