<odoo>
    <data>
        <!-- Proceso de generar archivo plano de pago nómina -->


        <!-- Crear record rule para filtrar las compañias-->
        <record id="rule_hr_voucher_sending_company" model="ir.rule">
            <field name="name">Permisos compañia Comprobantes de nómina</field>
            <field name="model_id" ref="model_hr_voucher_sending" />
            <field name="domain_force">['|','|','|',('payslip_run_id.company_id','=',False),('payslip_run_id.company_id',
                'in', company_ids),('payslip_id.company_id','=',False),('payslip_id.company_id',
                'in', company_ids)]</field>
        </record>

        <record id="hr_voucher_sending_form" model="ir.ui.view">
            <field name="name">Comprobantes de Nómina</field>
            <field name="model">hr.voucher.sending</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="generate_voucher" 
                                string="Generar Comprobantes" 
                                type="object"
                                class="btn-primary"
                                data-hotkey="g"/>
                        
                        <button name="generate_voucher_failed" 
                                string="Reprocesar Fallidos"
                                type="object"
                                invisible="not vouchers_failed_ids"
                                data-hotkey="r"/>

                        <button name="send_voucher" 
                                string="Enviar Comprobantes"
                                type="object"
                                invisible="mail_mail_pend_count == 0"
                                data-hotkey="r"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button
                                name="action_view_mail_lines"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-list-alt"
                            >
                                <field
                                    name="mail_mail_pdf_count"
                                    widget="statinfo"
                                    string="PDF"
                                />
                            </button>
                        </div>

                        <div class="oe_title">
                            <h1>Comprobantes de Nómina</h1>
                        </div>
                        
                        <group>
                            <field name="generation_type" widget="radio" options="{'horizontal': true}"/>
                            <field name="subject" placeholder="Asunto del correo"/>
                        </group>
    
                        <group>
                            <field name="payslip_run_id" 
                                   invisible="generation_type == 'individual'"
                                   required="generation_type == 'lote'"
                                   options="{'no_create': true}"/>
                            <field name="employee_id" 
                                   invisible="generation_type == 'lote'"
                                   required="generation_type == 'individual'"
                                   options="{'no_create': true}"/>
                            <field name="payslip_id" 
                                   invisible="generation_type == 'lote'"
                                   required="generation_type == 'individual'"
                                   options="{'no_create': true}"/>
                        </group>
    
                        <!-- Alert para comprobantes fallidos -->
                        <div invisible="not vouchers_failed_ids" role="alert" class="alert alert-warning">
                            <div class="o_horizontal_separator">Atención</div>
                            <p>Existen comprobantes que no se pudieron procesar. 
                               Revise la pestaña de "Comprobantes Fallidos" para más detalles.</p>
                        </div>
    
                        <notebook>
                            <page string="Correos Enviados" name="sent_emails">
                                <field name="mail_mail_ids" readonly="1" colspan="2">
                                    <tree>
                                        <field name="create_date" string="Fecha Envío"/>
                                        <field name="subject" string="Asunto"/>
                                        <field name="payslip_id" string="Nómina"/>
                                        <field name="email_to" string="Destinatario"/>
                                        <field name="recipient_ids" widget="many2many_tags"/>
                                        <field name="attachment_ids" widget="many2many_tags"/>
                                        <field name="state" decoration-success="state == 'sent'" 
                                               decoration-warning="state == 'outgoing'"
                                               decoration-danger="state == 'exception'"/>
                                        <button name="send" string="Reenviar" type="object" 
                                                icon="fa-paper-plane" class="btn btn-link"
                                                invisible="state == 'sent'"/>
                                    </tree>
                                    <form>
                                        <sheet>
                                            <group>
                                                <group>
                                                    <field name="subject"/>
                                                    <field name="email_to"/>
                                                    <field name="email_from"/>
                                                    <field name="recipient_ids" widget="many2many_tags"/>
                                                </group>
                                                <group>
                                                    <field name="state"/>
                                                    <field name="create_date"/>
                                                    <field name="failure_reason" invisible="state != 'exception'"/>
                                                </group>
                                            </group>
                                            <notebook>
                                                <page string="Contenido" name="email_content">
                                                    <field name="body_html" widget="html"/>
                                                </page>
                                                <page string="Adjuntos" name="attachments">
                                                    <field name="attachment_ids"/>
                                                </page>
                                            </notebook>
                                        </sheet>
                                    </form>
                                </field>
                                <group class="oe_subtotal_footer">
                                    <field name="mail_mail_count" string="Total Correos"/>
                                    <field name="mail_mail_sent_count" string="Enviados"/>
                                    <field name="mail_mail_failed_count" string="Fallidos"/>
                                    <field name="mail_mail_pend_count" string="Pendiente por Enviar"/>
                                </group>
                            </page>
    
                            <page string="Comprobantes Fallidos" name="failed_vouchers">
                                <field name="vouchers_failed_ids" readonly="1" colspan="2">
                                    <tree>
                                        <field name="payslip_id"/>
                                        <field name="description"/>
                                        <field name="create_date"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    
        <record id="hr_voucher_sending_tree" model="ir.ui.view">
            <field name="name">Comprobantes de nómina</field>
            <field name="model">hr.voucher.sending</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="create_date"/>
                    <field name="generation_type"/>
                    <field name="payslip_run_id"/>
                    <field name="payslip_id"/>
                    <field name="subject"/>
                    <field name="create_uid" widget="many2one_avatar_user"/>
                    <field name="mail_mail_count" string="Total Correos"/>
                    <field name="mail_mail_sent_count" string="Enviados"/>
                    <field name="mail_mail_failed_count" string="Fallidos"/>
                </tree>
            </field>
        </record>
    
        <record id="hr_payslip_voucher_generation_search" model="ir.ui.view">
            <field name="name">Búsqueda de Comprobantes</field>
            <field name="model">hr.voucher.sending</field>
            <field name="arch" type="xml">
                <search>
                    <field name="subject"/>
                    <field name="payslip_run_id"/>
                    <field name="payslip_id"/>
                    <field name="mail_mail_ids" string="Correos"/>
                    <filter string="Lote" name="batch" domain="[('generation_type', '=', 'lote')]"/>
                    <filter string="Individual" name="individual" domain="[('generation_type', '=', 'individual')]"/>
                    <separator/>
                    <filter string="Fecha" name="date_filcreate_dateter" date="create_date" default_period="last_month"/>
                    <group expand="0" string="Agrupar Por">
                        <filter string="Tipo de Generación" name="generation_type" 
                                context="{'group_by': 'generation_type'}"/>
                        <filter string="Lote de Nómina" name="payslip_run" 
                                context="{'group_by': 'payslip_run_id'}"/>
                        <filter string="Fecha Creación" name="create_date" 
                                context="{'group_by': 'create_date:month'}"/>
                    </group>
                </search>
            </field>
        </record>
    
        <record id="action_hr_voucher_sending" model="ir.actions.act_window">
            <field name="name">Generación de Comprobantes</field>
            <field name="res_model">hr.voucher.sending</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="hr_payslip_voucher_generation_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Genere comprobantes de nómina para sus empleados
                </p>
                <p>
                    Puede generar comprobantes por lotes o individualmente y enviarlos por correo electrónico.
                </p>
            </field>
        </record>
        <menuitem name="Comprobantes de nómina" 
                    id="logyca_hr_payroll.menu_payroll_voucher_parent" 
                    parent="hr_payroll.menu_hr_payroll_payslips" 
                    sequence="90"/>

        <menuitem name="Procesamiento Comprobantes de nómina" 
                    id="logyca_hr_payroll.menu_payroll_voucher_sending" 
                    parent="logyca_hr_payroll.menu_payroll_voucher_parent" 
                    action="action_hr_voucher_sending" sequence="1"/>

        <record id="mail_mail_tree_voucher" model="ir.ui.view">
            <field name="name">mail.mail.tree.voucher</field>
            <field name="model">mail.mail</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="create_date" string="Fecha Envío"/>
                    <field name="subject" string="Asunto"/>
                    <field name="payslip_id" string="Nómina"/>
                    <field name="email_to" string="Destinatario"/>
                    <field name="recipient_ids" widget="many2many_tags"/>
                    <field name="attachment_ids" widget="many2many_tags"/>
                    <field name="state" decoration-success="state == 'sent'" 
                            decoration-warning="state == 'outgoing'"
                            decoration-danger="state == 'exception'"/>
                    <button name="send" string="Reenviar" type="object" 
                            icon="fa-paper-plane" class="btn btn-link"
                            invisible="state == 'sent'"/>
                </tree>
            </field>
        </record>

        <record id="action_mail_mail_voucher" model="ir.actions.act_window">
            <field name="name">Comprobantes de nómina por Empleado</field>
            <field name="res_model">mail.mail</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('payroll_voucher', '=', True)]</field>
            <field name="view_id" ref="mail_mail_tree_voucher"/>
            <!-- <field name="search_view_id" ref="hr_payslip_voucher_generation_search"/> -->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Genere comprobantes de nómina para sus empleados
                </p>
                <p>
                    Puede generar comprobantes por lotes o individualmente y enviarlos por correo electrónico.
                </p>
            </field>
        </record>

        <menuitem name="Comprobantes de nómina por Empleado" 
                    id="logyca_hr_payroll.menu_mail_mail_voucher_sending" 
                    parent="logyca_hr_payroll.menu_payroll_voucher_parent"
                    action="action_mail_mail_voucher" sequence="2"/>

        <record id="hr_voucher_sending_line_tree" model="ir.ui.view">
            <field name="name">hr.voucher.sending.line.tree</field>
            <field name="model">hr.voucher.sending.line</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="create_date" string="Fecha Envío"/>
                    <field name="voucher_id" />
                    <field name="mail_id" />
                    <field name="payslip_id" string="Nómina"/>
                    <field name="state" decoration-success="state == 'sent'" 
                            decoration-warning="state == 'outgoing'"
                            decoration-danger="state == 'exception'"/>
                </tree>
            </field>
        </record>

        <record id="hr_voucher_sending_line_form" model="ir.ui.view">
            <field name="name">hr.voucher.sending.line.form</field>
            <field name="model">hr.voucher.sending.line</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="create_date" string="Fecha Envío"/>
                                <field name="voucher_id" />
                                <field name="mail_id" />
                            </group>
                            <group>
                                <field name="payslip_id" string="Nómina"/>
                                <field name="attachment_id"
                                        domain="[('type','=','binary'), ('mimetype','=','application/pdf')]"
                                        options="{'no_create_edit': True}"/>

                                <!-- Visor PDF -->
                                <field name="attachment_mimetype" invisible="1"/>
                                <field name="attachment_pdf"
                                        filename="attachment_pdf_name"
                                        widget="pdf_viewer"
                                        style="height:70vh;"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="hr_voucher_sending_line_search" model="ir.ui.view">
            <field name="name">Búsqueda de Comprobantes por Correo</field>
            <field name="model">hr.voucher.sending.line</field>
            <field name="arch" type="xml">
                <search>
                    <field name="voucher_id"/>
                    <field name="payslip_id"/>
                    <field name="attachment_id" string="PDF"/>
                    <field name="employee_id" string="Empleado"/>
                    <field name="create_date" string="Fecha"/>
                    <separator/>
                    <filter string="Fecha" name="date_filcreate_dateter" date="create_date" default_period="last_month"/>             
                    <filter string="Por Enviar" name="state" domain="[('state', '=', 'outgoing')]"/>
                    <filter string="Enviado" name="state" domain="[('state', '=', 'sent')]"/>
                    <filter string="Error en la entrega" name="state" domain="[('state', '=', 'exception')]"/>
                    <group expand="0" string="Agrupar Por">
                        <filter string="Procesamiento de Envio" name="voucher_id" 
                                context="{'group_by': 'voucher_id'}"/>
                        <filter string="Estado" name="state" 
                                context="{'group_by': 'state'}"/>
                        <filter string="Fecha Creación" name="create_date" 
                                context="{'group_by': 'create_date:month'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="action_hr_voucher_sending_line" model="ir.actions.act_window">
            <field name="name">Comprobantes de nómina por Empleado por correo</field>
            <field name="res_model">hr.voucher.sending.line</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="hr_voucher_sending_line_tree"/>
            <!-- <field name="search_view_id" ref="hr_payslip_voucher_generation_search"/> -->
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Genere comprobantes de nómina para sus empleados
                </p>
                <p>
                    Puede generar comprobantes por lotes o individualmente y enviarlos por correo electrónico.
                </p>
            </field>
        </record>

        <menuitem name="Comprobantes de nómina por Empleado por correo" 
                    id="logyca_hr_payroll.menu_hr_voucher_sending_line" 
                    parent="logyca_hr_payroll.menu_payroll_voucher_parent"
                    action="action_hr_voucher_sending_line" sequence="3"/>        
    </data>
</odoo>
