<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista de formulario heredada para mostrar el campo en notas crÃ©dito -->
        <record id="view_account_move_form_conditional_discount" model="ir.ui.view">
            <field name="name">account.move.form.conditional.discount</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="is_conditional_discount_credit_note" 
                           invisible="move_type != 'out_refund' or not is_conditional_discount_credit_note"
                           readonly="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
