<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>                    
        <template id="report_certification_period_added" inherit_id="l10n_co_reports.report_certification">
            <xpath expr="/t/t/t/t/div/div[3]" position="replace">
                <div class="row">
                    <div class="col-6">
                        Ciudad Tercero: <t t-esc="partner['partner_id'].x_city.name"/>
                    </div>
                    <div class="col-6">
                        Periodo Certificado: <t t-esc="date_from"/> Al <t t-esc="date_to"/>
                    </div>
                </div>
            </xpath>
        </template>                                
  </data>                            
</odoo>
