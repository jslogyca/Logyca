<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add themes in editor -->
    <template id="logyca_email_designer_snippets" inherit_id="mass_mailing.email_designer_snippets">
        <xpath expr="//div[@id='email_designer_themes']" position="inside">
            <div data-name="Logyca Theme"
                 data-img="/logyca_mass_mailing_theme/static/src/img/theme_imgs/logyca_thumb"
                 data-images-info='{"logo": {"format": "png"}, "all": {"module": "logyca_mass_mailing_theme"}}'>
                <t t-call="logyca_mass_mailing_theme.logyca_theme_template"/>
            </div>
        </xpath>
    </template>

    <!-- Theme "Newsletter" default template -->
    <template id="logyca_theme_template">
        <div class="o_mail_block_header_social">
            <div class="o_mail_snippet_general">
                <table align="center" cellspacing="0" cellpadding="0" border="0" class="o_mail_table_styles">
                    <tbody>
                        <tr>
                            <td width="70%" class="o_mail_logo_container o_mail_h_padding o_mail_v_padding">
                                <a style="text-decor
                                    ation:none;float:none;" href="http://www.example.com">
                                     <img border="0" src="/logyca_mass_mailing_theme/static/src/img/theme_logyca/redes_05.png" style="height:auto;max-width:400px;" alt="Logo"/>
                                </a>
                            </td>
                            <td width="30%" class="text-right o_mail_no_resize">
                                <div class="o_mail_header_social">
                                    <t t-if="company_id.social_facebook">
                                        <a t-att-href="company_id.social_facebook">
                                          <span class="fa fa-facebook"></span>
                                        </a>
                                    </t>
                                    <t t-if="company_id.social_googleplus">
                                        <a t-att-href="company_id.social_googleplus" style="margin-left:10px">
                                            <span class="fa fa-google-plus"></span>
                                        </a>
                                    </t>
                                    <t t-if="company_id.social_linkedin">
                                        <a t-att-href="company_id.social_linkedin" style="margin-left:10px">
                                            <span class="fa fa-linkedin"></span>
                                        </a>
                                    </t>
                                    <t t-if="company_id.social_twitter">
                                        <a t-att-href="company_id.social_twitter" style="margin-left:10px">
                                            <span class="fa fa-twitter"></span>
                                        </a>
                                    </t>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="o_mail_block_footer_separator">
            <div class="o_mail_snippet_general">
                <table align="center" cellspacing="0" cellpadding="0" class="o_mail_table_styles o_mail_full_width_padding">
                    <tbody>
                        <tr>
                            <td valign="top" style="width:100%;">
                                <div style="width:100%;" class="separator"></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="o_mail_block_paragraph">
            <div class="o_mail_snippet_general">
                <table align="center" cellspacing="0" cellpadding="0" border="0" class="o_mail_table_styles">
                    <tbody>
                        <tr>
                            <td width="100%" class="o_mail_h_padding o_mail_v_padding">
                                <p> Hi there!</p>
                                <p> The next edition of Odoo Experience looks very promising. More than 150 talks are scheduled during those 3 days!
                                    Find below some stand-out talks for the Business tracks.</p>
                                <p> To stir up your curiosity, have a look at all the great talks scheduled and highlighted in our agenda!</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="o_mail_block_event o_mail_no_colorpicker mb32">
            <div class="o_mail_snippet_general">
                <table align="center" cellpadding="0" cellspacing="0" class="o_mail_table_styles">
                    <tbody><tr>
                        <td style="width:25%;min-height: 150px;vertical-align:middle;" class="o_mail_h_padding o_mail_v_padding bg-beta text-center o_mail_col_mv">
                            <h3 class="o_mail_no_margin ">21 Jul</h3>
                            <p class="o_mail_no_margin ">ALL DAY</p>
                        </td>
                        <td style="width:25%;min-height: 150px;" class="text-center bg-delta o_mail_col_mv">
                            <img src="/logyca_mass_mailing_theme/static/src/img/theme_logyca/logycax-25-mayo1_01.jpg" class="center-block" alt="Photo"/>
                        </td>
                        <td class="o_mail_h_padding o_mail_v_padding o_mail_col_mv" style="min-height: 150px;">
                            <div style="min-height: 111px">
                                <h4>Register Now!</h4>
                                <p class="o_mail_no_margin ">
                                    Discover the new version of our software, with a great overview on all the new features.
                                </p>
                            </div>
                            <div class="small mt16">
                                <a href="#" class="btn btn-sm btn-primary ">Registration</a>
                                <a href="#" class="btn btn-sm btn-link " style="margin-left:10px">More Info</a>
                            </div>
                        </td>
                    </tr>
                </tbody></table>
            </div>
        </div>
        <div class="o_mail_block_footer_separator">
            <div class="o_mail_snippet_general">
                <table align="center" cellspacing="0" cellpadding="0" class="o_mail_table_styles o_mail_full_width_padding">
                    <tbody>
                        <tr>
                            <td valign="top" style="width:100%;" class="o_mail_v_padding">
                                <div style="width:100%;" class="separator"></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="o_mail_block_image_text">
            <div class="o_mail_snippet_general">
                <table align="center" cellspacing="0" cellpadding="0" class="o_mail_table_styles">
                    <tbody>
                        <tr>
                            <td style="width: 250px; text-align: center; vertical-align: middle;" class="o_mail_col_mv o_mail_img_container o_mail_h_padding o_mail_v_padding">
                                <img src="/logyca_mass_mailing_theme/static/src/img/theme_logyca/logycax-25-mayo1_01.png" class="center-block" alt="Photo" style=""/>
                            </td>
                            <td style="width: 350px; vertical-align: middle; text-align: center;" class="o_mail_col_mv o_mail_h_padding o_mail_v_padding">
                                <h3 class="text-left mt0">Premium Pass</h3>
                                <p class="o_mail_no_margin " style="text-align:justify;">This pass gives you access to the catering and evening activities! </p>
                                <div class="text-left" style="margin-top:15px;">
                                    <a href="#" class="btn btn-sm btn-primary ">Read More</a>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="o_mail_block_image_text">
            <div class="o_mail_snippet_general">
                <table align="center" cellspacing="0" cellpadding="0" class="o_mail_table_styles">
                    <tbody>
                        <tr>
                            <td style="width: 250px; text-align: center; vertical-align: middle;" class="o_mail_col_mv o_mail_img_container o_mail_h_padding o_mail_v_padding">
                                <img src="/logyca_mass_mailing_theme/static/src/img/theme_logyca/logycax-25-mayo1_06.png" class="center-block" alt="Photo" style=""/>
                            </td>
                            <td style="width: 350px; vertical-align: middle; text-align: center;" class="o_mail_col_mv o_mail_h_padding o_mail_v_padding">
                                <h3 class="text-left mt0">Call for Speakers</h3>
                                <p class="o_mail_no_margin " style="text-align:justify;">Odoo Experience is the place to be to showcase your expertize.</p>
                                <div class="text-left" style="margin-top:15px;">
                                    <a href="#" class="btn btn-sm btn-primary ">Read More</a>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <t t-call="mass_mailing.s_mail_block_footer_social_left"/>
    </template>
</odoo>
