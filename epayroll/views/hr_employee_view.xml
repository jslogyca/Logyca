<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<record id="view_employee_form_epayroll" model="ir.ui.view">
		<field name="name">view.employee.form.epayroll</field>
		<field name="model">hr.employee</field>
		<field name="inherit_id" ref="hr.view_employee_form"/>
		<field name="arch" type="xml">
			<xpath expr="//form/sheet/notebook[1]" position="inside">
				<page name="epayslip" string="EPayslip">
					<group>
						<group >
							<field name="sub_job_id"/>
						</group>
						<group >
							<field name="ejob_id"/>
						</group>
					</group>
				</page>
			</xpath>
		</field>
	</record>
</odoo>