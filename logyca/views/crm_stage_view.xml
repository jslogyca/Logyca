<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="crm_stage_form_lose" model="ir.ui.view">
            <field name="name">crm.stage.form.lose</field>
            <field name="model">crm.stage</field>
            <field name="inherit_id" ref="crm.crm_stage_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='is_won']" position="after">
                    <field name="is_lose"/>
                </xpath>
            </field>
        </record>
        <record id="crm_stage_tree_lose" model="ir.ui.view">
            <field name="name">crm.stage.tree.lose</field>
            <field name="model">crm.stage</field>
            <field name="inherit_id" ref="crm.crm_stage_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='is_won']" position="after">
                    <field name="is_lose"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
