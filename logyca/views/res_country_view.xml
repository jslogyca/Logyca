<?xml version="1.0" ?>
<odoo>
    <record id="view_country_form_lg_inherit" model="ir.ui.view">
        <field name="name">res.country.form.lg.inherit</field>
        <field name="model">res.country</field>
        <field name="inherit_id" ref="base.view_country_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="after">
                <field name="x_code_dian"/>
            </xpath>
        </field>
    </record>            
</odoo>