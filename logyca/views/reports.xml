<!-- //////////////////////////////// REPORTS //////////////////////////////// -->    
<odoo>
    <data>
        
        <record id="logyca_menu_action_report_rl" model="ir.actions.report">
            <field name="name">Representantes ante LOGYCA</field>
            <field name="model">res.partner</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">partner_report_contact_rl</field>            
        </record>
        
        <!-- Clientes y sus contactos de tipo representante ante LOGYCA -->    
        <report
            id="partner_report_contact_rl"
            model="res.partner"
            string="Representantes ante LOGYCA"
            report_type="qweb-html"
            name="partner_report_contact_rl"                      
            file="partner_file_contact_rl"                                   
        />
        
        <template id="partner_report_contact_rl">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set = "result_query" t-value = "o.run_sql_rl()" />
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2>Representantes ante LOGYCA</h2>
                            <t t-foreach = "result_query" t-as ="part">
                                 <p> <span t-esc =" part_index "/>: <span t-esc =" part "/> </p>
                             </t>                            
                        </div>
                    </t>
                </t>
            </t>
        </template>
        
    </data>
</odoo>