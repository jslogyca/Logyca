<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Cron job for SARLAFT reminder activities -->
        <record id="cron_sarlaft_reminder_activities" model="ir.cron">
            <field name="name">SARLAFT: Create Reminder Activities</field>
            <field name="model_id" ref="model_sarlaft_tracking"/>
            <field name="state">code</field>
            <field name="code">model._cron_create_reminder_activities()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>

    </data>
</odoo>
