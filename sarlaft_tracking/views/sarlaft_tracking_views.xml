<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- SARLAFT Tracking List View -->
        <record id="view_sarlaft_tracking_list" model="ir.ui.view">
            <field name="name">sarlaft.tracking.list</field>
            <field name="model">sarlaft.tracking</field>
            <field name="arch" type="xml">
                <list string="SARLAFT Tracking"
                      decoration-danger="is_overdue"
                      decoration-warning="days_to_next_query &lt;= 30 and days_to_next_query &gt; 0"
                      decoration-success="result_risk == 'low'"
                      decoration-info="result_risk == 'medium'"
                      decoration-muted="result_risk == 'high'">
                    <field name="partner_type"/>
                    <field name="partner_id"/>
                    <field name="registration_number"/>
                    <field name="employee_id" optional="hide"/>
                    <field name="query_date"/>
                    <field name="next_query_date"/>
                    <field name="result_option"/>
                    <field name="result_risk"/>
                    <field name="requested_by"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                    <field name="is_overdue" column_invisible="1"/>
                    <field name="days_to_next_query" column_invisible="1"/>
                </list>
            </field>
        </record>

        <!-- SARLAFT Tracking Form View -->
        <record id="view_sarlaft_tracking_form" model="ir.ui.view">
            <field name="name">sarlaft.tracking.form</field>
            <field name="model">sarlaft.tracking</field>
            <field name="arch" type="xml">
                <form string="SARLAFT Tracking">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="display_name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group name="main_info">
                                <field name="partner_id" options="{'no_create': True, 'no_create_edit': True}"/>
                                <field name="partner_type"/>
                                <field name="registration_number"/>
                                <field name="employee_id" invisible="partner_type != 'employee'" force_save="1"/>
                                <field name="company_id" groups="base.group_multi_company"  options="{'no_create': True, 'no_create_edit': True}"/>
                            </group>
                            <group name="dates">
                                <field name="query_date"/>
                                <field name="next_query_date"/>
                                <field name="is_overdue"/>
                                <field name="days_to_next_query"/>
                                <field name="requested_by"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Information" name="information">
                                <group name="info_group">
                                    <group name="info_left_group">
                                        <field name="ident_type"/>
                                        <field name="ident_number"/>
                                    </group>
                                    <group name="info_right_group">
                                        <field name="result_option" options="{'no_create': True, 'no_create_edit': True}"/>
                                        <field name="result_risk" widget="radio"/>
                                        <field name="result_link" widget="url"/>
                                    </group>
                                </group>
                                <group name="additional_info" string="Additional Information">
                                    <field name="information" nolabel="1"/>
                                </group>
                                <group name="comments" string="Comments">
                                    <field name="comments" nolabel="1"/>
                                </group>
                            </page>
                        </notebook>

                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <!-- SARLAFT Tracking Search View -->
        <record id="view_sarlaft_tracking_search" model="ir.ui.view">
            <field name="name">sarlaft.tracking.search</field>
            <field name="model">sarlaft.tracking</field>
            <field name="arch" type="xml">
                <search string="SARLAFT Tracking">
                    <field name="partner_id" filter_domain="['|', '|', ('partner_id', 'ilike', self), ('registration_number', 'ilike', self), ('ident_number', 'ilike', self)]"/>
                    <field name="registration_number" string="Registration Number"/>
                    <field name="requested_by" string="Requested By"/>
                    <filter name="overdue" string="Overdue"
                            domain="[('is_overdue', '=', True)]"/>
                    <filter name="due_soon" string="Due Soon (30 days)"
                            domain="[('days_to_next_query', '&lt;=', 30), ('days_to_next_query', '&gt;', 0)]"/>
                    <separator/>
                    <filter name="customer" string="Customers"
                            domain="[('partner_type', '=', 'customer')]"/>
                    <filter name="supplier" string="Suppliers"
                            domain="[('partner_type', '=', 'supplier')]"/>
                    <filter name="employee" string="Employees"
                            domain="[('partner_type', '=', 'employee')]"/>
                    <separator/>
                    <filter name="risk_high" string="High Risk"
                            domain="[('result_risk', '=', 'high')]"/>
                    <filter name="risk_medium" string="Medium Risk"
                            domain="[('result_risk', '=', 'medium')]"/>
                    <filter name="risk_low" string="Low Risk"
                            domain="[('result_risk', '=', 'low')]"/>
                    <group expand="0" string="Group By">
                        <filter name="group_partner_type" string="Partner Type"
                                domain="[]" context="{'group_by': 'partner_type'}"/>
                        <filter name="group_risk" string="Risk Level"
                                domain="[]" context="{'group_by': 'result_risk'}"/>
                        <filter name="group_query_date" string="Query Date"
                                domain="[]" context="{'group_by': 'query_date'}"/>
                        <filter name="group_company" string="Company"
                                domain="[]" context="{'group_by': 'company_id'}"
                                groups="base.group_multi_company"/>
                    </group>
                </search>
            </field>
        </record>


        <!-- SARLAFT Tracking Pivot View -->
        <record id="view_sarlaft_tracking_pivot" model="ir.ui.view">
            <field name="name">sarlaft.tracking.pivot</field>
            <field name="model">sarlaft.tracking</field>
            <field name="arch" type="xml">
                <pivot string="SARLAFT Analysis">
                    <field name="partner_type" type="row"/>
                    <field name="result_risk" type="row"/>
                    <field name="query_date" type="col" interval="month"/>
                </pivot>
            </field>
        </record>

        <!-- SARLAFT Tracking Graph View -->
        <record id="view_sarlaft_tracking_graph" model="ir.ui.view">
            <field name="name">sarlaft.tracking.graph</field>
            <field name="model">sarlaft.tracking</field>
            <field name="arch" type="xml">
                <graph string="SARLAFT Analysis" type="bar">
                    <field name="partner_type"/>
                    <field name="result_risk"/>
                </graph>
            </field>
        </record>

        <!-- SARLAFT Tracking Action -->
        <record id="action_sarlaft_tracking" model="ir.actions.act_window">
            <field name="name">SARLAFT Tracking</field>
            <field name="res_model">sarlaft.tracking</field>
            <field name="view_mode">list,form,pivot,graph</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first SARLAFT tracking record
                </p>
                <p>
                    Record and track SARLAFT queries performed on customers, suppliers, and employees.
                    Use the import feature to bulk load records from Excel or CSV files.
                </p>
            </field>
        </record>

    </data>
</odoo>
