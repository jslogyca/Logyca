<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- SARLAFT Security Categories -->
        <record id="module_category_sarlaft" model="ir.module.category">
            <field name="name">SARLAFT</field>
            <field name="description">SARLAFT Query Tracking System</field>
            <field name="sequence">50</field>
        </record>

        <!-- SARLAFT Read Group -->
        <record id="group_sarlaft_read" model="res.groups">
            <field name="name">SARLAFT / Read</field>
            <field name="category_id" ref="module_category_sarlaft"/>
            <field name="comment">Read access to SARLAFT tracking records</field>
        </record>

        <!-- SARLAFT Administration Group -->
        <record id="group_sarlaft_admin" model="res.groups">
            <field name="name">SARLAFT / Administration</field>
            <field name="category_id" ref="module_category_sarlaft"/>
            <field name="implied_ids" eval="[(4, ref('group_sarlaft_read'))]"/>
            <field name="comment">Full access to SARLAFT tracking records including creation, editing and import</field>
        </record>

        <!-- Record Rules -->
        <!-- SARLAFT Tracking - Read Access -->
        <record id="sarlaft_tracking_read_rule" model="ir.rule">
            <field name="name">SARLAFT Tracking: Read Access</field>
            <field name="model_id" ref="model_sarlaft_tracking"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_sarlaft_read'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- SARLAFT Tracking - Admin Access -->
        <record id="sarlaft_tracking_admin_rule" model="ir.rule">
            <field name="name">SARLAFT Tracking: Admin Access</field>
            <field name="model_id" ref="model_sarlaft_tracking"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_sarlaft_admin'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
