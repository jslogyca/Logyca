<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Tree -->
    <record id="view_analytic_account_request_tree" model="ir.ui.view">
        <field name="name">analytic.account.request.tree</field>
        <field name="model">analytic.account.request</field>
        <field name="arch" type="xml">
            <tree string="Solicitudes de Cuentas Analíticas"
                  decoration-info="state == 'draft'"
                  decoration-warning="state == 'requested'"
                  decoration-success="state == 'done'"
                  decoration-danger="state == 'cancelled'">
                <field name="name"/>
                <field name="request_date"/>
                <field name="partner_id"/>
                <field name="company_id"/>
                <field name="plan_id"/>
                <field name="analytic_account_name"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'requested'"
                       decoration-primary="state == 'approved'"
                       decoration-success="state == 'done'"
                       decoration-danger="state == 'cancelled'"/>
                <field name="analytic_account_id"/>
            </tree>
        </field>
    </record>

    <!-- Vista Form -->
    <record id="view_analytic_account_request_form_web" model="ir.ui.view">
        <field name="name">view.analytic.account.request.form_web</field>
        <field name="model">analytic.account.request</field>
        <field name="arch" type="xml">
            <form string="Solicitud de Cuenta Analitica">
                <header>
                    <button name="action_approve" string="Aprobar" type="object"
                            class="oe_highlight"
                            invisible="state != 'requested'"
                            groups="analytic_account_request.group_analytic_account_approver"/>
                    <button name="action_cancel" string="Cancelar" type="object"
                            invisible="state not in ['requested', 'approved']"
                            groups="analytic_account_request.group_analytic_account_approver"/>
                    <button name="action_create_analytic_account" string="Crear Cuenta Analítica" type="object"
                            class="oe_highlight"
                            invisible="state != 'approved'"
                            groups="analytic_account_request.group_analytic_account_approver"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,requested,approved,done"/>
                </header>
                <sheet>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Información del Solicitante">
                            <field name="request_date"/>
                            <field name="available_partner_ids" invisible="1"/>
                            <field name="partner_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="employee_id" readonly="1"/>
                            <field name="email" readonly="1" widget="email"/>
                        </group>
                        <group string="Información de la Cuenta Analítica">
                            <field name="company_id" options="{'no_create': True}"/>
                            <field name="available_plan_ids" invisible="1"/>
                            <field name="plan_id" options="{'no_create': True}" domain="[('id', 'in', available_plan_ids)]"/>
                            <field name="analytic_account_name"/>
                            <field name="analytic_account_id" readonly="1" invisible="not analytic_account_id"/>
                        </group>
                    </group>
                    
                    <group string="Observaciones">
                        <field name="observations" nolabel="1" placeholder="Ingrese cualquier observación o detalle adicional..."/>
                    </group>
                    
                    <group string="Razón de Cancelación" invisible="state != 'cancelled'">
                        <field name="cancel_reason" nolabel="1" readonly="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div> 
            </form>
        </field>
    </record>

    <!-- Vista Search -->
    <record id="view_analytic_account_request_search" model="ir.ui.view">
        <field name="name">analytic.account.request.search</field>
        <field name="model">analytic.account.request</field>
        <field name="arch" type="xml">
            <search string="Buscar Solicitudes">
                <field name="name" string="Número de Solicitud"/>
                <field name="partner_id" string="Solicitante"/>
                <field name="analytic_account_name" string="Nombre de Cuenta"/>
                <field name="company_id"/>
                <field name="plan_id"/>
                <filter string="Borradores" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Solicitadas" name="requested" domain="[('state', '=', 'requested')]"/>
                <filter string="Aprobadas" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Terminadas" name="done" domain="[('state', '=', 'done')]"/>
                <filter string="Canceladas" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="Mis Solicitudes" name="my_requests" 
                        domain="[('employee_id.user_id', '=', uid)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Solicitante" name="group_partner" context="{'group_by': 'partner_id'}"/>
                    <filter string="Compañía" name="group_company" context="{'group_by': 'company_id'}"/>
                    <filter string="Línea de Negocio" name="group_plan" context="{'group_by': 'plan_id'}"/>
                    <filter string="Fecha de Solicitud" name="group_date" context="{'group_by': 'request_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Vista Kanban -->
    <record id="view_analytic_account_request_kanban" model="ir.ui.view">
        <field name="name">analytic.account.request.kanban</field>
        <field name="model">analytic.account.request</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_group_by="state">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="analytic_account_name"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <span class="badge badge-pill" 
                                      t-attf-class="badge-{{
                                          state == 'draft' and 'secondary' or
                                          state == 'requested' and 'warning' or
                                          state == 'approved' and 'primary' or
                                          state == 'done' and 'success' or
                                          state == 'cancelled' and 'danger'
                                      }}">
                                    <field name="state"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <field name="partner_id"/>
                                <br/>
                                <field name="analytic_account_name"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Wizard de Cancelación -->
    <record id="view_analytic_account_request_cancel_wizard" model="ir.ui.view">
        <field name="name">analytic.account.request.cancel.wizard.form</field>
        <field name="model">analytic.account.request.cancel.wizard</field>
        <field name="arch" type="xml">
            <form string="Cancelar Solicitud">
                <group>
                    <field name="request_id" invisible="1"/>
                    <field name="cancel_reason" placeholder="Ingrese la razón de la cancelación..."/>
                </group>
                <footer>
                    <button string="Confirmar Cancelación" name="action_confirm_cancel" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción de ventana -->
    <record id="action_analytic_account_request" model="ir.actions.act_window">
        <field name="name">Solicitudes de Cuentas Analíticas</field>
        <field name="res_model">analytic.account.request</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay solicitudes de cuentas analíticas
            </p>
            <p>
                Las solicitudes se crean desde el formulario web público.
            </p>
        </field>
    </record>

    <!-- Menú -->

    <menuitem id="menu_analytic_request_root"
              name="Solicitudes Web"
              web_icon="analytic_account_request,static/description/icon.png"
              sequence="100"/>
    
    <menuitem id="menu_analytic_account_request_root"
              name="Solicitudes Cuentas Analíticas"
              parent="menu_analytic_request_root"
              sequence="1"/>

    <menuitem id="menu_analytic_account_request"
              name="Solicitudes"
              parent="menu_analytic_account_request_root"
              action="action_analytic_account_request"
              sequence="1"/>

</odoo>
