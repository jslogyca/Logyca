<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Secuencia para el número de solicitud -->
        <record id="seq_analytic_account_request" model="ir.sequence">
            <field name="name">Solicitud de Cuenta Analítica</field>
            <field name="code">analytic.account.request</field>
            <field name="prefix">SCA-</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>
        
        <!-- Secuencia para solicitud de tarjeta de crédito -->
        <record id="seq_credit_card_request" model="ir.sequence">
            <field name="name">Solicitud de Tarjeta de Crédito</field>
            <field name="code">credit.card.request</field>
            <field name="prefix">STC-</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>
        
        <!-- Secuencia para solicitud de producto -->
        <record id="seq_product_request" model="ir.sequence">
            <field name="name">Solicitud de Creación de Producto</field>
            <field name="code">product.request</field>
            <field name="prefix">SCP-</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
            <field name="implementation">standard</field>
        </record>
    </data>
</odoo>
