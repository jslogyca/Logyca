<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_import_file_wizard_view" model="ir.ui.view">
        <field name="name">sale.order.import.file.wizard.form</field>
        <field name="model">sale.order.import.file.wizard</field>
        <field name="arch" type="xml">
            <form string="Purchase Import File Wizard">
                <sheet>
                    <group string="Asistente para importar masivamente Compras">
                        <!-- <group>
                            <div>
                                <p><strong>Condiciones:</strong></p>
                                <ul>
                                    <li>Estar registrada en Odoo</li>
                                    <li>Estar activa</li>
                                </ul>
                            </div>
                        </group> -->
                    </group>
                    <group string="Cargue su plantilla de Excel">
                        <group>
                            <field name="file_data" filename="filename" placeholder="Choose a file to import..."/>
                            <field name="filename" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="import_file" string="Import" type="object" class="btn-primary" />
                    <button string="Cancelar" special="cancel" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_sale_order_import_file_wizard_view" model="ir.actions.act_window">
        <field name="name">Purchase Lead Import File Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order.import.file.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sale_order_import_file_wizard_view"/>
        <field name="target">new</field>
    </record>     

    <menuitem id="menu_sale_order_import_file_wizard"
        name="Purchase Lead Import File Wizard"
        parent="purchase.menu_procurement_management"
        sequence="20"
        action="action_sale_order_import_file_wizard_view" />

</odoo>