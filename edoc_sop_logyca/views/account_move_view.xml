<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="view_account_move_form_edoc">
        <field name="name">view.account.move.form.edoc</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"></field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_info']" position="after">
                <page string="EDoc Sop" name="edoc_sop" attrs="{'invisible':[('move_type', '!=', 'in_invoice')]}">
                    <group>
                        <group>
                            <field name="type_document_id" />
                            <field name="ds_date" />
                            <field name="state_doc_sop" />
                            <field name="track_ds_id" />
                            <field name="code_cuds" />
                        </group>
                        <group>    
                            <field name="user_ds_id" />
                            <field name="form_send_ds_id" />
                            <field name="url_dian_ds" />
                            <field name="type_operation_ds" />
                        </group>
                    </group>

                    <field name="bug_ds_ids" widget="one2many_list" readonly="1">
                        <tree editable="bottom">
                            <field name="description"/>
                            <field name="code"/>
                        </tree>
                    </field>
                    <group name="buttons" col="3">
                        <group>
                            <button string="Do and Send Document Sop" name="action_ds_generate_move" type="object" class="oe_highlight" attrs="{'invisible':[('state_doc_sop', 'not in', ('no_send', 'draft', 'error'))]}" />
                        </group>
                        <group>
                            <button string="XML Download DS" type="object" name="get_xml_ds_file" icon="fa-download" class="btn btn-primary" attrs="{'invisible':[('state_doc_sop', 'not in', ('send', 'done', 'error', 'no_send'))]}" />
                        </group>
                        <group>
                            <button string="Validar" name="get_status_validation_ds" type="object" attrs="{'invisible':[('state_doc_sop', 'not in', ('send',))]}" class="oe_highlight" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
