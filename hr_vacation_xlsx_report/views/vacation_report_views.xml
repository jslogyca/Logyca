<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="action_vacation_report_wizard" model="ir.actions.act_window">
    <field name="name">Reporte de Vacaciones (XLSX)</field>
    <field name="res_model">vacation.report.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

  <menuitem id="menu_vacation_report_root" name="Vacaciones XLSX" parent="hr_holidays.menu_hr_holidays_root" sequence="95"/>
  <menuitem id="menu_vacation_report_action" name="Generar Reporte" parent="menu_vacation_report_root"
            action="action_vacation_report_wizard" sequence="10"/>

  <record id="view_vacation_report_wizard_form" model="ir.ui.view">
    <field name="name">vacation.report.wizard.form</field>
    <field name="model">vacation.report.wizard</field>
    <field name="arch" type="xml">
      <form string="Reporte de Vacaciones">
        <group>
          <group>
            <field name="year"/>
            <field name="month"/>
            <field name="leave_type_id" options="{'no_create': True}"/>
          </group>
          <group>
            <field name="company_id"/>
            <field name="only_active_contracts"/>
          </group>
        </group>
        <footer>
          <button string="Exportar XLSX" type="object" name="action_export_xlsx" class="btn-primary"/>
          <button string="Cancelar" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
