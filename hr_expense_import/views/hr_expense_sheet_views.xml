<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Heredar vista form de hr.expense.sheet para agregar campo agrupar_por_factura -->
    <record id="view_hr_expense_sheet_form_inherit" model="ir.ui.view">
        <field name="name">hr.expense.sheet.form.inherit</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_mode']" position="after">
                <field name="agrupar_por_factura" 
                       invisible="payment_mode != 'credit_card'"/>
                <field name="documento_soporte"/>
            </xpath>
        </field>
    </record>

    <!-- Heredar vista tree de hr.expense.sheet para agregar filtros -->
    <record id="view_hr_expense_sheet_tree_inherit" model="ir.ui.view">
        <field name="name">hr.expense.sheet.tree.inherit</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="decoration-info">state == 'submit'</attribute>
                <attribute name="decoration-success">state == 'approve'</attribute>
            </xpath>
        </field>
    </record>

    <!-- Heredar vista search para agregar filtros personalizados -->
    <record id="view_hr_expense_sheet_filter_inherit" model="ir.ui.view">
        <field name="name">hr.expense.sheet.search.inherit</field>
        <field name="model">hr.expense.sheet</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_sheet_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_team_reports']" position="after">
                <filter string="Por Aprobar" name="submit" domain="[('state', '=', 'submit')]"/>
                <filter string="Aprobadas" name="approved" domain="[('state', '=', 'approve')]"/>
            </xpath>
        </field>
    </record>

    <!-- AcciÃ³n servidor para enviar a aprobar en lote -->
    <record id="action_hr_expense_sheet_submit_batch" model="ir.actions.server">
        <field name="name">Enviar a Aprobar</field>
        <field name="model_id" ref="hr_expense.model_hr_expense_sheet"/>
        <field name="binding_model_id" ref="hr_expense.model_hr_expense_sheet"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
if records:
    action = records.action_submit_sheets_batch()
        </field>
    </record>
</odoo>
