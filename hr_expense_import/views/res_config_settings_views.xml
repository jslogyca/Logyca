<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Heredar vista de configuración de gastos -->
    <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr.expense.import</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_expense.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <!-- Agregar después del último setting del bloque "Expenses" -->
            <xpath expr="//block[@name='expenses_setting_container']" position="inside">
                <setting string="Default Expense Approver"
                         help="Default approver for imported expense reports"
                         title="Select the user who will be automatically assigned as approver for imported expense reports.">
                    <field name="default_expense_approver_id"/>
                </setting>         
            </xpath>
        </field>
    </record>
</odoo>