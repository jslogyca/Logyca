<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_expense_import_wizard_form" model="ir.ui.view">
        <field name="name">hr.expense.import.wizard.form</field>
        <field name="model">hr.expense.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar Reportes de Gastos">
                <sheet>
                    <group>
                        <group>
                            <field name="file_data" filename="filename" required="1"/>
                            <field name="filename" invisible="1"/>
                        </group>
                        <group>
                            <field name="payment_mode" required="1"/>
                            <field name="credit_card_id" 
                                   invisible="payment_mode != 'credit_card'"
                                   required="payment_mode == 'credit_card'"/>
                        </group>
                    </group>
                    
                    <group string="Instrucciones" col="1">
                        <div class="alert alert-info" role="alert">
                            <strong>Formato del archivo Excel:</strong>
                            <ul>
                                <li>Columna A: Compañía (nombre de la compañía)</li>
                                <li>Columna B: Fecha del gasto</li>
                                <li>Columna C: Referencia del reporte (agrupa los gastos)</li>
                                <li>Columna D: NIT del proveedor</li>
                                <li>Columna E: Notas internas / Descripción</li>
                                <li>Columna F: Descripción de monto exento de IVA</li>
                                <li>Columna G: Nombre del proveedor</li>
                                <li>Columna H: Nombre del empleado</li>
                                <li>Columna I: Grupo Presupuestal</li>
                                <li>Columna J: Cuenta Analítica</li>
                                <li>Columna K: Total del gasto</li>
                                <li>Columna L: Monto exento de IVA</li>
                                <li>Columna M: IVA</li>
                            </ul>
                            <p><strong>Nota:</strong> Los gastos se agruparán por la columna C (Referencia) para crear los reportes de gastos.</p>
                        </div>
                    </group>

                    <notebook>
                        <page string="Resultado de Validación" invisible="not validation_result">
                            <field name="validation_result" readonly="1" 
                                   widget="text" 
                                   style="font-family: monospace; white-space: pre-wrap;"/>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_validate_data" 
                            string="Validar Datos" 
                            type="object" 
                            class="btn-primary"/>
                    <button name="action_import_expenses" 
                            string="Importar" 
                            type="object" 
                            class="btn-success"
                            confirm="¿Está seguro de que desea importar los reportes de gastos?"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_hr_expense_import_wizard" model="ir.actions.act_window">
        <field name="name">Importar Reportes de Gastos</field>
        <field name="res_model">hr.expense.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_hr_expense_import_wizard"
              name="Importar Gastos"
              parent="hr_expense.menu_hr_expense_root"
              action="action_hr_expense_import_wizard"
              sequence="10"/>
</odoo>
