<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="product_benef_form" model="ir.ui.view">
		<field name="name">product.benef.form</field>
		<field name="model">product.benef</field>
		<field name="arch" type="xml">
			<form string="Gestión y Administración de Beneficios" create="false" edit="false">
				<header>
				 	<button name="action_notified" type="object" states="draft" string="Notified" class="oe_highlight"/>
				 	<button name="action_cancel" type="object" states="draft" string="Cancel" class="oe_highlight"/>
				 	<button name="action_confirm" type="object" states="notified" string="Confirm" class="oe_highlight"/>
				 	<button name="action_done" type="object" states="confirm" string="Done" class="oe_highlight"/>
				 	<button name="action_re_done" type="object" states="done" string="Re-Done" class="oe_highlight"/>
				 	<button name="action_rejected" type="object" states="notified" string="Rejected" class="oe_highlight"/>
					<field name="state" widget="statusbar" statusbar_visible="draft,notified,confirm,done,rejected,cancel" />
				</header>			
				<sheet>
					<group>
						<group>
							<field name="partner_id" />
							<field name="parent_id" />
							<field name="product_id" />
							<field name="agreement_id" />
							<field name="type_beneficio" invisible="1"/>
						</group>
						<group>
							<field name="cant_cod" attrs="{'invisible': [('type_beneficio','!=','codigos')]}"/>
							<field name="cant_cod_disp" attrs="{'invisible': [('type_beneficio','!=','codigos')]}"/>
							<field name="sub_product_ids" attrs="{'invisible': [('type_beneficio','!=','colabora')]}"/>
							<field name="date_end" attrs="{'invisible': [('type_beneficio','!=','colabora')]}"/>
							<field name="gln" attrs="{'invisible': [('type_beneficio','not in',('colabora','codigos'))]}" />
						</group>
					</group>
				</sheet>
				<!-- Chatter -->
				<div class="oe_chatter">
					<field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
					<field name="activity_ids" widget="mail_activity"/>
					<field name="message_ids" widget="mail_thread"/>
				</div>				
			</form>
		</field>
	</record>
	<record id="product_benef_tree" model="ir.ui.view">
		<field name="name">product.benef.tree</field>
		<field name="model">product.benef</field>
		<field name="arch" type="xml">
			<tree string="Gestión y Administración de Beneficios" create="false" >
				<field name="partner_id"/>
				<field name="parent_id"/>
				<field name="product_id"/>
				<field name="type_beneficio" invisible="1"/>
				<field name="sub_product_ids" attrs="{'invisible': [('type_beneficio','!=','colabora')]}"/>
				<field name="agreement_id"/>
				<field name="state"/>
			</tree>
		</field>
	</record>

	<record id="action_product_benef" model="ir.actions.act_window">
		<field name="name">Gestión y Administración de Beneficios</field>
		<field name="res_model">product.benef</field>
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem
		id="hr_menu_product_benef"
		name="Postulación y Entrega del Beneficio"
		action="action_product_benef"
		parent="rvc.hr_menu_product_benef_parent"
		sequence="4"
		groups="rvc.group_rvc_manager"/>

</odoo>