<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="rvc_import_file_sponsored_wizard_view" model="ir.ui.view">
        <field name="name">rvc.import.file.sponsored.wizard.form</field>
        <field name="model">rvc.import.file.sponsored.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <p class="oe_grey">
                        Asistente para importar masivamente Patrocinadores
                    </p> 
                    <group>
                        <div>
                            <a href="/rvc/static/xls/Plantilla_Jalonadores.xlsx" aria-label="Download" title="Descargar">
                                <i class="fa fa-download"></i> <span>Plantilla Patrocinadores</span>
                            </a>
                        </div>
                    </group>                               
                    <group>
                        <group>
                            <field name="file_data" filename="filename" placeholder="Choose a file to import..."/>
                            <field name="filename" invisible="1"/>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="import_file" string="Import" type="object" class="btn-primary" />
                    <button string="Cancelar" special="cancel" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_rvc_import_file_sponsored_wizard_view" model="ir.actions.act_window">
        <field name="name">Importar Patrocinadores</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">rvc.import.file.sponsored.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="rvc_import_file_sponsored_wizard_view"/>
        <field name="target">new</field>
    </record>

