<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista de formulario para website.leave.form -->
    <record id="view_website_leave_form_form" model="ir.ui.view">
        <field name="name">website.leave.form.form</field>
        <field name="model">website.leave.form</field>
        <field name="arch" type="xml">
            <form string="Formulario de Ausencia Web">
                <header>
                    <button name="send_approval_notification" 
                            string="Reenviar Notificación" 
                            type="object" 
                            class="btn-primary" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Nombre del Solicitante"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Información del Solicitante">
                            <field name="email"/>
                            <field name="employee_id"/>
                            <field name="request_date"/>
                        </group>
                        <group string="Información de la Ausencia">
                            <field name="holiday_status_id"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="leave_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <group string="Aprobación">
                        <field name="approver_id" options="{'no_create': True}"/>
                        <field name="available_approver_ids" invisible="1"/>
                    </group>
                    
                    <group string="Detalles">
                        <field name="notes" placeholder="Motivo o notas adicionales..."/>
                    </group>
                    
                    <notebook>
                        <page string="Adjuntos" name="attachments">
                            <field name="attachment_ids" widget="many2many_binary" string="Documentos Adjuntos"/>
                        </page>
                        <page string="Información Adicional" name="additional_info">
                            <group>
                                <group>
                                    <field name="create_date" readonly="1"/>
                                    <field name="create_uid" readonly="1"/>
                                </group>
                                <group>
                                    <field name="write_date" readonly="1"/>
                                    <field name="write_uid" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Vista de árbol para website.leave.form -->
    <record id="view_website_leave_form_tree" model="ir.ui.view">
        <field name="name">website.leave.form.tree</field>
        <field name="model">website.leave.form</field>
        <field name="arch" type="xml">
            <tree string="Solicitudes de Ausencia Web">
                <field name="request_date"/>
                <field name="name"/>
                <field name="email"/>
                <field name="employee_id"/>
                <field name="holiday_status_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="approver_id"/>
                <field name="state" decoration-success="state == 'submitted'" decoration-muted="state == 'draft'" decoration-danger="state == 'error'"/>
                <field name="leave_id"/>
            </tree>
        </field>
    </record>

    <!-- Vista de búsqueda para website.leave.form -->
    <record id="view_website_leave_form_search" model="ir.ui.view">
        <field name="name">website.leave.form.search</field>
        <field name="model">website.leave.form</field>
        <field name="arch" type="xml">
            <search string="Buscar Solicitudes de Ausencia">
                <field name="name" string="Solicitante"/>
                <field name="email"/>
                <field name="employee_id"/>
                <field name="holiday_status_id"/>
                <field name="approver_id"/>
                <separator/>
                <filter string="Borradores" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Enviadas" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Con Errores" name="error" domain="[('state', '=', 'error')]"/>
                <separator/>
                <filter string="Este Mes" name="this_month" 
                        domain="[('request_date', '&gt;=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')),
                                 ('request_date', '&lt;=', (context_today() + relativedelta(day=31)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Tipo de Ausencia" name="group_leave_type" context="{'group_by': 'holiday_status_id'}"/>
                    <filter string="Aprobador" name="group_approver" context="{'group_by': 'approver_id'}"/>
                    <filter string="Fecha de Solicitud" name="group_request_date" context="{'group_by': 'request_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción de ventana -->
    <record id="action_website_leave_form" model="ir.actions.act_window">
        <field name="name">Solicitudes Web de Ausencia</field>
        <field name="res_model">website.leave.form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_submitted': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay solicitudes de ausencia web
            </p>
            <p>
                Las solicitudes realizadas desde el formulario web aparecerán aquí.
            </p>
        </field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_website_leave_form_root"
              name="Ausencias Web"
              sequence="100"/>
    
    <menuitem id="menu_website_leave_form"
              name="Solicitudes Web"
              parent="menu_website_leave_form_root"
              action="action_website_leave_form"
              sequence="10"/>
</odoo>
